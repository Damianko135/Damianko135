# Environment Variables for Docker Compose
# Copy this file to .env and update the values as needed

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_this_secure_root_password
MYSQL_DATABASE=portfolio
MYSQL_USER=portfolio
MYSQL_PASSWORD=change_this_secure_password
MYSQL_ALLOW_EMPTY_PASSWORD=no

# Application Configuration
DB_HOST=mysql
DB_USER=portfolio
DB_PASS=change_this_secure_password
DB_NAME=portfolio

# Traefik Configuration
TRAEFIK_CERT_RESOLVER=lets-encrypt
ADMIN_EMAIL=your@email.com

# Security
ADMIN_LOGIN=admin:$2y$10$example_bcrypt_hash_here

# Logging
LOG_LEVEL=INFO

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
